#:kivy 1.1.0
WindowManager:
    FirstWindow:
        name: 'main'
    SecondWindow:
        name: 'all'
    ThirdWindow:
        name: 'find'
    FourthWindow:
        name: 'find_amount'
    FifthWindow:
        name: 'add'
    SixthWindow:
        name: 'delete'    
<FirstWindow>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        MDLabel:
            text: "Выберите  из списка ниже"
            halign: "center"
            font_size: 32
    MDGridLayout:
        size_hint: 1.,.8
        rows: 3
        cols: 2
        padding: 50
        spacing: 20
        adaptive_height: True    
        
        MDRectangleFlatButton:
            text: "Список всех студентов"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .5,.2
            on_release: root.manager.current = 'all'
            font_size: 20
        MDRectangleFlatButton:
            text: "Поиск студента по имени/группе"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .5,.2
            on_release: root.manager.current = 'find'
            font_size: 20
        MDRectangleFlatButton:
            text: "Поиск студента по количеству опт"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .5,.2
            on_release: root.manager.current = 'find_amount'
            font_size: 20    
        MDRectangleFlatButton:
            text: "Добавить студента"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .5,.2
            on_release: root.manager.current = 'add'
            font_size: 20
        MDRectangleFlatButton:
            text: "Удалить студента"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .5,.2
            on_release: root.manager.current = 'delete'
            font_size: 20        
<SecondWindow>:
    
    MDBoxLayout:    
        pos_hint:{'center_x': 0.5,'center_y': .9}
        adaptive_size:True,
        padding:"24dp"
        spacing:"24dp"
        MDRaisedButton:
            text:"121701" 
            on_release:root.display_121701()
        MDRaisedButton:
            text:"121702" 
            on_release:root.display_121702()
        MDRaisedButton:
            text:"121703" 
            on_release:root.display_121703()
        MDRaisedButton:
            text:"All" 
            on_release:root.display_all()
    MDBoxLayout:
        MDRectangleFlatButton:
            adaptive_size: False
            size_hint: .1,.1
            pos_hint: {'center_x': .5, 'center_y': .07}
            text: "Назад"
            on_release: root.manager.current = 'main'       
<ThirdWindow>:
    MDFloatLayout:
    MDBoxLayout:
        pos_hint:{'center_x': 0.5,'center_y': .9}
        adaptive_size:True,
        padding:"24dp"
        spacing:"24dp"
    MDBoxLayout:    
        MDTextField:
            id: name
            hint_text: "Имя студента"
            pos_hint: {'center_x': .2,'center_y': .9}
            multiline: False
            on_text:root.find_by_name()
        MDTextField:
            id : group
            hint_text: "Номер группы"
            pos_hint: {'center_x': .8,'center_y': .9}
            max_text_length: 6
            multiline: False
            on_text:root.find_by_group()
       
            
        
    MDBoxLayout:
        MDRectangleFlatButton:
            adaptive_size: False
            size_hint: .1,.1
            pos_hint: {'center_x': .5, 'center_y': .07}
            text: "Назад"
            on_release: root.manager.current = 'main'    

