#:kivy 1.1.0
WindowManager:
    FirstWindow:
        name: 'main'
    SecondWindow:
        name: 'all'
    ThirdWindow:
        name: 'find'

<FirstWindow>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        MDLabel:
            text: "Выберите  из списка ниже"
            halign: "center"
            font_size: 36
        MDRectangleFlatButton:
            text: "Список всех студентов"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .7,.2
            on_release: root.manager.current = 'all'
            font_size: 20
        MDRectangleFlatButton:
            text: "Добавить студента в список"
            pos_hint: {'center_x': .5, 'center_y': 1.}
            size_hint: .7,.2
            on_release: root.manager.current = 'find'
            font_size: 20
<SecondWindow>:
    MDBoxLayout:
        
        
        MDDataTable
            pos_hint:{"center_y": 0.5, "center_x": 0.5}
            size_hint: 0.9, 0.6
            use_pagination:True
            column_data:[
                ('1', dp(10)),
                ('1', dp(20)),
                ("Column 2", dp(20)),
                ("Column 3", dp(20)),
                ("Column 4", dp(20)),
                ("Column 5", dp(20)),
                ("Column 6", dp(20)),
                ("Column 7", dp(20)),
                ("Column 8", dp(20)),
                ("Column 9", dp(20)),
                ("Column 10", dp(20)),
                ("Column 11", dp(20)),
                ("Column 12", dp(20)),
                ("Column 13", dp(20))
            ]
            row_data: [
                ("No.", ""),
                ("Column 1", ""),
                ("Column 2", ""),
                ("Column 3", ""),
                ("Column 4", ""),
                ("Column 5", ""),
                ("Column 6", ""),
                ("Column 7", ""),
                ("Column 8", ""),
                ("Column 9", ""),
                ("Column 10", ""),
                ("Column 11", ""),
                ("Column 12", ""),
                ("Column 13", "")
            ]
                
            
        
    MDBoxLayout:    
        pos_hint :{"center_x": 0.5}
        adaptive_size :True
        padding:"24dp"
        spacing:"24dp"
        MDRaisedButton:
            text:"121701" 
            on_release:self.on_button_press
        MDRaisedButton:
            text:"121702" 
            on_release:self.on_button_press
        MDRaisedButton:
            text:"121703" 
            on_release:self.on_button_press
        MDRaisedButton:
            text:"All" 
            on_release:self.on_button_press
    MDBoxLayout:
        MDRectangleFlatButton:
            adaptive_size: False
            size_hint: .1,.1
            pos_hint: {'center_x': .5, 'center_y': .07}
            text: "Назад"
            on_release: root.manager.current = 'main'       
<ThirdWindow>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        MDGridLayout:
            cols: 5
            rows: 2
            padding: 50
            spacing: 20
            adaptive_height: True
            pos_hint_y: 0
            MDLabel:
                halign: "center"
                text: "Фамилия"
                pos_hint: .1,1.
            MDLabel:
                halign: "center"
                text: "Номер группы"
            MDLabel:
                halign: "center"
                text: "Тип пропуска"
            MDLabel:
                halign: "center"
                text: "Нижний предел часов"
            MDLabel:
                halign: "center"
                text: "Верхний предел часов"
            
        MDLabel:
            text: ''
            size_hint: 1.,.8
        MDBoxLayout:
            MDRectangleFlatButton:
                adaptive_size: False
                size_hint: .1,.1
                pos_hint: {'center_x': .5, 'center_y': .07}
                text: "Назад"
                on_release: root.manager.current = 'main'        

    

    